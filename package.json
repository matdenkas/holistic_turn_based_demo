{
  "version": "0.1",
  "devDependencies": {
    "esbuild": "0.21.4",
    "typescript": "5.4.5",
    "pixi.js": "8.1.6",
    "jest": "29.7.0",
    "@types/jest": "29.5.12",
    "ts-jest": "29.1.4",
    "ts-loader": "9.5.1"
  },
  "scripts": {
    "test": "npx tsc && npx jest",
    "compile:dev": "npx esbuild --outfile=build/main.js --bundle --define:DEBUG=true --sourcemap ./src/index.ts",
    "compile:prod": "npx esbuild --outfile=build/main.js --bundle --define:DEBUG=false --minify ./src/index.ts",
    "copy": "cp index.html build/index.html && cp -r lib build/lib",
    "build:dev": "npm run test && npm run compile:dev && npm run copy",
    "build:prod": "npm run test && npm run compile:prod && npm run copy"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/test/.*\\.test.ts$"
  } 
}
